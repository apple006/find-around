<view class="content">

  <view class='areainput'>
    <input class='' placeholder='查地点、公交站、公共设施' bindinput='callinput' bindblur='inputblur' bindfocus='inputfocus' confirm-type='search' bindconfirm="keyconfirm"></input>
    <view class="context" wx:if="{{showcontext}}">
      <view wx:for="{{keywos}}" wx:for-index="ind" wx:for-item="obj" bindtap='getData' data-index="{{ind}}">{{obj.address}}[{{obj.title}}]       </view>
    </view>
  </view>

  <view>
    <view class="lable">
      <text>热门搜索</text>
      <view class="curarea">
        <text>当前位置:</text>
        <text class="colgreen" bindtap='chosecueloc'>{{curcity}}</text>
      </view>
    </view>
    <scroll-view class='resou' scroll-y="true">
      <text wx:for="{{keyre}}" wx:for-item="obj" bindtap='histap' data-keyword="{{obj.keyword}}">{{obj.keyword}}</text>
    </scroll-view>
  </view>

  <view>
    <view class="lable">历史记录</view>
    <scroll-view class='history' scroll-y="true">
      <view class='keyword' wx:for="{{keyhis}}" wx:for-item="obj" bindtap='histap' data-keyword="{{obj.keyword}}">
        <text>{{obj.keyword}}</text>
      </view>
    </scroll-view>
    
  </view>

  <view bindtouchstart='startHandel' bindtouchend='endHandle' class="tapview">
    <text>{{text}}</text>
  </view>

</view>
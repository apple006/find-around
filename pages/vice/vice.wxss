/* pages/vice/vice.wxss */
.content{
  padding: 0rpx 30rpx;
  font-size: 30rpx;
}
.areainput{
  padding: 20rpx 0rpx;
  position: relative;
}
.areainput .context{
  position: absolute;
  top: 110rpx;
  left: 0rpx;
  right: 0rpx;
  background:#1AAD19;
  color:#fff;
  z-index: 1000;
  /* padding:20rpx 0rpx; */
  border:1px solid #ddd;
}
.areainput image{
  position:absolute;
  top:25rpx;
  left:10rpx;
  width:60rpx;
  height:60rpx;
}
.context view{
  padding: 15rpx 20rpx;
  background:transparent;
  color:#fff;
  font-size:30rpx;
}
 .context view.on{
  background:#fff;
  color:#1AAD19;
} 
.areainput input{
  border: 1px solid #ccc;
  padding: 10rpx;
  padding-left: 80rpx;
  font-size: 30rpx;
}
.history{
  height:400rpx;
}
/* scroll-view{
  height: 300rpx;
} */
.keyword{
  padding: 10rpx 0px;
  border-bottom: 1px solid #ccc;
  overflow:hidden;
}
.keyword image{
  float:right;
  width:40rpx;
  height:40rpx;
}
.resou text{
  float:left;
  display: inline-block;
  padding: 5rpx 10rpx;
  border: 1px solid #ccc;
  color: #cccccc;  
  margin-right: 20rpx;
  margin-top: 20rpx;
  
}
.tapview{
  text-align: center;
  margin-top: 50rpx;
}
.tapview text{
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  background: #1AAD19;
  display: inline-block;
  line-height: 200rpx;
  color: #fff;
}
.curarea{
  float: right;
}
.colgreen{
  color: #1AAD19;
}
.lable{
  padding: 30rpx 0rpx;
}